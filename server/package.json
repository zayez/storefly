{
  "name": "storefly-api",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc --reporter=html --reporter=text npm test",
    "start:dev": "TZ=utc NODE_ENV=development nodemon server.js",
    "start:test": "TZ=utc NODE_ENV=test nodemon server.js",
    "start:prod": "TZ=utc NODE_ENV=production nodemon server.js",
    "create:db:dev": "NODE_ENV=development knex migrate:latest && NODE_ENV=development knex seed:run",
    "create:db:test": "NODE_ENV=test knex migrate:latest && NODE_ENV=test knex seed:run",
    "test": "TZ=utc NODE_ENV=test tape 'tests/**/*.js'",
    "test:min": "NODE_ENV=test tape 'tests/**/*.js' | tap-min",
    "test:watch": "TZ=utc find tests/ -type f -name '*.js' | npm run test:watch:run",
    "test:watch:run": "TZ=utc NODE_ENV=test entr -r tape 'tests/**/*.js' | tap-spec-emoji",
    "test:integration": "TZ=utc NODE_ENV=test tape 'tests/integration/**/*.js'",
    "test:integration:watch": "TZ=utc find tests/integration -type f -name '*.js' | npm run test:integration:watch:run",
    "test:integration:watch:run": "TZ=utc NODE_ENV=test entr -r tape 'tests/integration/**/*.js' | tap-spec-emoji",
    "test:unit": "TZ=utc NODE_ENV=test tape 'tests/unit/**/*.js'",
    "test:unit:watch": "TZ=utc find tests/unit -type f -name '*.js' | npm run test:unit:watch:run",
    "test:unit:watch:run": "TZ=utc NODE_ENV=test entr -r tape 'tests/unit/**/*.js' | tap-spec-emoji"
  },
  "keywords": [],
  "author": "zayez",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "dotenv": "^16.0.1",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "supertest": "^6.2.4",
    "tap-min": "^2.0.0",
    "tap-spec-emoji": "^6.1.2",
    "tape": "^5.5.3"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/multer": "^3.0.0",
    "bcrypt": "^5.0.1",
    "date-fns": "^2.29.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.2.0",
    "knex-paginate": "^3.0.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-passport": "^5.0.0",
    "koa-router": "^12.0.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pluralize": "^8.0.0",
    "sqlite3": "^5.0.11",
    "stripe": "^11.6.0",
    "upper-case-first": "^2.0.2"
  }
}
